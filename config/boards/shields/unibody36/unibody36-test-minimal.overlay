/*
 * Minimal 3x3 test configuration
 * Tests first 3 rows and first 3 columns
 * Replace unibody36.overlay with this to test
 */

#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <3>;
        rows = <3>;

        map = <
            RC(0,0) RC(0,1) RC(0,2)
            RC(1,0) RC(1,1) RC(1,2)
            RC(2,0) RC(2,1) RC(2,2)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        wakeup-source;

        diode-direction = "col2row";

        // First 3 rows only
        row-gpios
            = <&gpio1 13 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // P1.13 - Top row
            , <&gpio1 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // P1.11 - Second row
            , <&gpio0 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // P0.10 - Third row
            ;

        // First 3 columns only (avoiding potentially problematic pins)
        col-gpios
            = <&gpio0 24 GPIO_ACTIVE_HIGH>  // P0.24 - Col 0
            , <&gpio1 0  GPIO_ACTIVE_HIGH>  // P1.00 - Col 1
            , <&gpio0 11 GPIO_ACTIVE_HIGH>  // P0.11 - Col 2
            ;
    };
};
