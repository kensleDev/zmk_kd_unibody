/*
 * TEST VERSION - Rows and Columns SWAPPED
 * Try this if the normal version doesn't work
 */

#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <4>;  // SWAPPED - was 10
        rows = <10>;    // SWAPPED - was 4

        // Matrix mapping for 36-key unibody layout
        map = <
RC(0,0) RC(1,0) RC(2,0) RC(3,0) RC(4,0)  RC(5,0) RC(6,0) RC(7,0) RC(8,0) RC(9,0)
RC(0,1) RC(1,1) RC(2,1) RC(3,1) RC(4,1)  RC(5,1) RC(6,1) RC(7,1) RC(8,1) RC(9,1)
RC(0,2) RC(1,2) RC(2,2) RC(3,2) RC(4,2)  RC(5,2) RC(6,2) RC(7,2) RC(8,2) RC(9,2)
                RC(2,3) RC(3,3) RC(4,3)  RC(5,3) RC(6,3) RC(7,3)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";

        diode-direction = "col2row";  // Also swapped back

        // SWAPPED: What we called "columns" are actually rows
        row-gpios
            = <&gpio0 24 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // P0.24
            , <&gpio1 0  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // P1.00
            , <&gpio0 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // P0.11
            , <&gpio1 4  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // P1.04
            , <&gpio1 6  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // P1.06
            , <&gpio0 22 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // P0.22
            , <&gpio0 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // P0.20
            , <&gpio0 17 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // P0.17
            , <&gpio0 8  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // P0.08
            , <&gpio0 6  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // P0.06
            ;

        // SWAPPED: What we called "rows" are actually columns
        col-gpios
            = <&gpio1 13 GPIO_ACTIVE_HIGH>  // P1.13
            , <&gpio1 11 GPIO_ACTIVE_HIGH>  // P1.11
            , <&gpio0 10 GPIO_ACTIVE_HIGH>  // P0.10
            , <&gpio0 9  GPIO_ACTIVE_HIGH>  // P0.09
            ;
    };
};
